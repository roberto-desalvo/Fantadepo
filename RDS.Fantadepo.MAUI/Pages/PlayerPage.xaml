<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RDS.Fantadepo.MAUI.Pages.PlayerPage"
             Title="ModifyPlayerPage"
             xmlns:models="clr-namespace:RDS.Fantadepo.Business.Models;assembly=RDS.Fantadepo.Business"
             xmlns:viewmodel="clr-namespace:RDS.Fantadepo.MAUI.ViewModels"
             x:DataType="viewmodel:PlayerViewModel">
    <ScrollView BackgroundColor="#19501c">
        <VerticalStackLayout
        Padding="30,0"
        Spacing="25">

            <Label Text="Name"/>
            <Entry Text="{Binding Player.Name}"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>