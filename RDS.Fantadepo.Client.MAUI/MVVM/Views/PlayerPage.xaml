<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RDS.Fantadepo.Client.MAUI.MVVM.Views.PlayerDetailPage"
             Title="ModifyPlayerPage"
             xmlns:models="clr-namespace:RDS.Fantadepo.Business.Models;assembly=RDS.Fantadepo.Business"
             xmlns:viewmodel="clr-namespace:RDS.Fantadepo.Client.MAUI.MVVM.ViewModels"
             x:DataType="viewmodel:PlayerDetailViewModel">
    <ScrollView BackgroundColor="#315C2B">
        <VerticalStackLayout
        Padding="30,0"
        Spacing="25">

            <Label Text="Name"/>
            <Entry Text="{Binding Model.Nickname}"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>